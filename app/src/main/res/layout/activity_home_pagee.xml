<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="24dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="60dp" />

    <!-- Welcome Text with Username in Horizontal Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back "
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Username Text -->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#6200EE"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Image with Padding -->
    <ImageView
        android:id="@+id/muka"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/tugas7"
        android:paddingTop="30dp"
        android:paddingBottom="30dp" />

    <!-- Text Below Image -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you doing today?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="20dp">

        <!-- Image Button for Sad Face -->
        <ImageButton
            android:id="@+id/sedih"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/red"
            android:src="@drawable/sad"
            android:contentDescription="Sad Face Button" />

        <!-- Image Button for Smiley Face -->
        <ImageButton
            android:id="@+id/senang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/green"
            android:src="@drawable/happy"
            android:contentDescription="Happy Face Button" />
    </LinearLayout>

</LinearLayout>
